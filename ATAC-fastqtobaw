trim_galore -q 25 --phred33 --length 35 -e 0.1 --stringency 4 --paired XXX.R1.fastq.gz XXX.R2.fastq.gz  --gzip -o /trim;bowtie2  -p 24  --very-sensitive -X 2000 -x hg19 -1 /trim/XXX.R1_val_1.fq.gz  -2 trim/XXX.R2_val_2.fq.gz | samtools sort -@ 5 -O bam -o /bam/XXX.bam;samtools view -h -f 2 -q 30 /bam/XXX.bam | grep -v chrM | samtools sort  -O bam  -@ 5 -o /last/XXX.nod.last.bam;samtools index /last/XXX.nod.last.bam /last/XXX.nod.last.bam.bai;deeptools-3.2.1/bin/bamCoverage --normalizeUsing CPM --bam /last/XXX.nod.last.bam -o /bw/XXX.nod.cpm.bw
